<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Editor.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Editor.Views.RsiFramesView"
             x:DataType="vm:RsiFramesViewModel">
    <StackPanel Orientation="Horizontal" Spacing="24" Margin="12 0 0 0">
        <StackPanel Orientation="Vertical" IsVisible="{Binding ShowFull}">
            <Panel>
                <Image Width="96" Height="96" Source="{Binding Full}" />
            </Panel>
            <TextBlock Text="Full" HorizontalAlignment="Center" MaxWidth="96" />
        </StackPanel>
        <StackPanel Orientation="Vertical" IsVisible="{Binding ShowCardinals}">
            <Panel>
                <Image Width="96" Height="96" Source="{Binding South}" />
            </Panel>
            <TextBlock Text="South" HorizontalAlignment="Center" MaxWidth="96" />
        </StackPanel>
        <StackPanel Orientation="Vertical" IsVisible="{Binding ShowCardinals}">
            <Panel>
                <Image Width="96" Height="96" Source="{Binding North}" />
            </Panel>
            <TextBlock Text="North" HorizontalAlignment="Center" MaxWidth="96" />
        </StackPanel>
        <StackPanel Orientation="Vertical" IsVisible="{Binding ShowCardinals}">
            <Panel>
                <Image Width="96" Height="96" Source="{Binding East}" />
            </Panel>
            <TextBlock Text="East" HorizontalAlignment="Center" MaxWidth="96" />
        </StackPanel>
        <StackPanel Orientation="Vertical" IsVisible="{Binding ShowCardinals}">
            <Panel>
                <Image Width="96" Height="96" Source="{Binding West}" />
            </Panel>
            <TextBlock Text="West" HorizontalAlignment="Center" MaxWidth="96" />
        </StackPanel>
        <StackPanel Orientation="Vertical" IsVisible="{Binding ShowDiagonals}">
            <Panel>
                <Image Width="96" Height="96" Source="{Binding SouthEast}" />
            </Panel>
            <TextBlock Text="South East" HorizontalAlignment="Center" MaxWidth="96" />
        </StackPanel>
        <StackPanel Orientation="Vertical" IsVisible="{Binding ShowDiagonals}">
            <Panel>
                <Image Width="96" Height="96" Source="{Binding SouthWest}" />
            </Panel>
            <TextBlock Text="South West" HorizontalAlignment="Center" MaxWidth="96" />
        </StackPanel>
        <StackPanel Orientation="Vertical" IsVisible="{Binding ShowDiagonals}">
            <Panel>
                <Image Width="96" Height="96" Source="{Binding NorthEast}" />
            </Panel>
            <TextBlock Text="North East" HorizontalAlignment="Center" MaxWidth="96" />
        </StackPanel>
        <StackPanel Orientation="Vertical" IsVisible="{Binding ShowDiagonals}">
            <Panel>
                <Image Width="96" Height="96" Source="{Binding NorthWest}" />
            </Panel>
            <TextBlock Text="North West" HorizontalAlignment="Center" MaxWidth="96" />
        </StackPanel>
    </StackPanel>
</UserControl>
